{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make & Test",
            "command": "cd build && make -j$(nproc) && make test",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Plot Simulation",
            "command": "cd build && make -j$(nproc) plot-simulation && ./bin/plot-simulation --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Tuner",
            "command": "cd build && make -j$(nproc) tuner && ./bin/tuner --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Genetics",
            "command": "cd build && make -j$(nproc) genetics && ./bin/genetics --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}