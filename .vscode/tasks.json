{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make & Test",
            "command": "make all -j$(nproc) && make test",
            "options": {
                "cwd": "build"
            },
            "problemMatcher": "$gcc",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Plot Simulation",
            "command": "cd build && make -j$(nproc) plot-simulation && ./bin/plot-simulation --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Python Plot Simulation",
            "command": "cd build && make -j$(nproc) py-plot-simulation && ./bin/py-plot-simulation --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Tuner",
            "command": "cd build && make -j$(nproc) tuner && ./bin/tuner --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Make & Genetics",
            "command": "cd build && make -j$(nproc) genetics && ./bin/genetics --out /tmp",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Jupyter Notebook",
            "command": "cd Python/plot-simulation/ && BROWSER=google-chrome && python3 -m jupyter notebook",
            "group": "build",
            "problemMatcher": []
        }
    ]
}